# sway configuration `man 5 sway`

## mod key
set $mod Mod4

## vim like nav
set $left h
set $down j
set $up k
set $right l

## terminal
set $term foot

## launcher
set $menu wofi --show drun -i --width=40% --height=43% | xargs swaymsg exec --

## policy agent
# LXQT
#exec /usr/libexec/lxqt-policykit-agent
#for_window [app_id="lxqt-policykit-agent"] floating enable

## screenshot
# fullscreen
bindsym Print exec grim ~/Pictures/Screenshots/screenshot-$(date +%s).png
# area
bindsym Shift+Print exec grim -g "$(slurp)" ~/Pictures/Screenshots/screenshot-$(date +%s).png

## color picker
bindsym $mod+Shift+p exec grim -g "$(slurp -p)" -t ppm - | convert - -format '%[pixel:p{0,0}]' txt:- | tail -n 1 | cut -d ' ' -f 4 | wl-copy 

## wallpaper
output * bg #000000 solid_color
#exec_always --no-startup-id ~/.config/sway/scripts/wikiart-wallpaper-imagemagick.sh >> ~/.config/sway/wallpaper.log 2>&1

## floating window on pip
for_window [title="Picture-in-Picture"] floating enable

## borders
default_border pixel 2px
default_floating_border none
titlebar_padding 1
titlebar_border_thickness 0

## idle
exec swayidle -w \
         timeout 180 'swaylock -f -c 000000' \
         timeout 210 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -F -c 000000' 
# prevent on fullscreen
for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen

## inputs swaymsg -t get_inputs `man 5 sway-input`
# touchpad
input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
    pointer_accel 0.3
}

## keyboard
input type:keyboard {
    xkb_layout "us,tr"

    #xkb_file "~/.config/sway/xkb/swap.xkb"
    #xkb_options "ctrl:swapcaps,altwin:swap_lalt_lwin"

    # switch layout
    xkb_options grp:alt_shift_toggle
}

# brightness
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

# volume and media
bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- -l 1.2
bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ -l 1.2
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop

# Custom favorite keys on microsoft natural ergonomic 4000
#bindsym F14 exec wifi toggle
#bindsym F15 exec bluetooth toggle
#bindsym F16 exec XDG_CURRENT_DESKTOP=GNOME gnome-control-center
#bindsym F17 exec systemctl suspend
#bindsym F18 exec wofi --show run
#bindsym XF86Mail exec thunderbird

## display
# toggle laptop display
bindsym --locked $mod+m output "eDP-1" toggle

## 2in1 laptop specific settings
# auto rotate 
#exec_always ~/.config/sway/scripts/auto-rotate.sh &
bindswitch lid:on exec ~/.config/sway/scripts/auto-rotate.sh &
bindswitch lid:off exec pkill auto-rotate.sh

# on screen keyboard
bindswitch tablet:on exec wvkbd -L 250 &
bindswitch tablet:off exec pkill -x wvkbd

# lid switch
#bindswitch lid:off exec swaymsg output eDP-1 disable
#bindswitch lid:on exec swaymsg output eDP-1 enable

# external display-dock
output "DP-3" {
    mode 2560x1440@100Hz
    scale 1
}

# rotate display
bindsym $mod+Shift+r exec ~/.config/sway/scripts/rotate-display.sh 

### Key bindings
    # Start a terminal
    bindsym $mod+Return exec $term

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Start launcher
    bindsym $mod+d exec $menu

    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit Sway, this will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Moving around:
    # Move focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    # Move the focused window
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right

# Workspaces:
    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10

# Layout:
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Make the current window sticky
    bindsym $mod+Shift+s sticky toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

# Scratchpad:
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show

# Resizing containers:
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Status Bar:`man 5 sway-bar`
bindsym $mod+q exec "swaymsg bar mode toggle"
bar {
    status_command ~/.config/sway/scripts/status.sh
    
    font "Liberation Mono Normal 14"
    height 20 
}

include /etc/sway/config.d/*
